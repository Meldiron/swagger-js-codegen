{
  "openapi": "3.0.1",
  "info": { "version": "1.0.0", "title": "Simple OA3 API" },
  "servers": [
    {
      "url": "/api/{version}",
      "variables": { "version": { "enum": ["v1"], "default": "v1" } }
    }
  ],
  "paths": {
    "/path/{path_parameter_1}/segment/{path_parameter_2}/{path_parameter_3}": {
      "x-exegesis-controller": "controllers/ctrl",
      "parameters": [
        {
          "in": "path",
          "name": "path_parameter_1",
          "description": "Parameter 1",
          "required": true,
          "schema": { "type": "string", "minLength": 1 }
        },
        {
          "in": "path",
          "name": "path_parameter_2",
          "description": "Parameter 2",
          "required": true,
          "schema": { "type": "string", "minLength": 1 }
        },
        {
          "in": "path",
          "name": "path_parameter_3",
          "description": "Parameter 3",
          "required": true,
          "schema": { "type": "string", "minLength": 1 }
        }
      ],
      "get": {
        "operationId": "simpleGetOperation",
        "parameters": [
          {
            "required": true,
            "name": "queryParam1",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "queryParam2",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "query_param_3",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["ACTIVE", "INACTIVE"],
              "default": "ACTIVE"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Just simple get operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "_id": { "type": "string", "readOnly": true },
                          "name": { "type": "string", "readOnly": true },
                          "ttl": { "type": "integer" },
                          "date": {
                            "type": "string",
                            "format": "date-time"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status", "name"],
                  "properties": {
                    "status": { "type": "integer" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "payload": { "type": "object" },
                    "userinfo": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "simplePostOperation",
        "security": [{ "securityUser": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "_id": { "type": "string", "readOnly": true },
                  "name": { "type": "string", "readOnly": true },
                  "ttl": { "type": "integer" },
                  "date": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Something created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "_id": { "type": "string", "readOnly": true }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Something already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status", "name"],
                  "properties": {
                    "status": { "type": "integer" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "payload": { "type": "object" },
                    "userinfo": { "type": "string" }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status", "name"],
                  "properties": {
                    "status": { "type": "integer" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "payload": { "type": "object" },
                    "userinfo": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upload": {
      "post": {
        "operationId": "simpleUploadOperation",
        "security": [{ "securityUser": [] }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": ["upload"],
                "properties": {
                  "upload": { "type": "string", "format": "base64" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Something uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "_id": { "type": "string", "readOnly": true }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/endpoint-with-query-parameter-delimited-by-pipe": {
      "x-exegesis-controller": "controllers/ctrl2",
      "get": {
        "operationId": "adminGetSuitableAgeCategories",
        "parameters": [
          {
            "name": "seasonIds",
            "in": "query",
            "explode": false,
            "style": "pipeDelimited",
            "required": false,
            "schema": { "type": "array", "items": { "type": "string" } }
          }
        ],
        "responses": {
          "200": {
            "description": "Get age categories by seasonId and appSpace sport",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["items"],
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "_id": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            },
            "default": {
              "description": "Generic error response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "required": ["status", "name"],
                    "properties": {
                      "status": { "type": "integer" },
                      "name": { "type": "string" },
                      "description": { "type": "string" },
                      "payload": { "type": "object" },
                      "userinfo": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/endpoint-without-ok-response": {
      "x-exegesis-controller": "controllers/ctrl2",
      "get": {
        "operationId": "endpointWithoutOkResponse",
        "responses": {
          "302": {
            "description": "Just simple get redirect operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/endpoint-with-all-of": {
      "x-exegesis-controller": "controllers/ctrl2",
      "get": {
        "operationId": "endpointWithAllOf",
        "responses": {
          "200": {
            "description": "Just simple get redirect operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          }
                        }
                      },
                      {
                        "required": ["_id"]
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "securityUser": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://localhost/auth/authorize",
            "scopes": {
              "scope1": "Scope 1 description",
              "scope2": "Scope 2 description"
            }
          }
        }
      }
    }
  }
}
